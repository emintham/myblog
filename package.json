{
  "name": "blog",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "clear-posts": "node scripts/clear-posts.mjs",
    "new-post": "node scripts/new-post.mjs",
    "img": "node scripts/process-images.mjs",
    "export-posts": "node scripts/export-posts.mjs",
    "import-posts": "node scripts/import-posts.mjs",
    "fmt": "prettier --write . --plugin prettier-plugin-astro",
    "check-format": "prettier --check . --plugin prettier-plugin-astro",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.cjs,.mjs,.ts,.astro --fix",
    "style:fix": "stylelint '**/*.{css,scss}' --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.5.3",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.3.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.6",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "codemirror": "^6.0.2",
    "glob": "^11.0.2",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.4",
    "react-select": "^5.10.1",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0",
    "vite": "^6.3.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/js-yaml": "^4.0.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/ui": "^3.1.4",
    "astro": "^5.14.6",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "fs-extra": "^11.3.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.8.3",
    "wrangler": "^4.16.1",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "vitest": "^3.1.4"
  }
}
