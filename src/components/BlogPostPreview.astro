---
const { post } = Astro.props;
const firstParagraphMatch = post.body.match(/<p>.*?<\/p>/s);
let firstParagraph = post.data.description || "";
if (!firstParagraph && firstParagraphMatch) {
  firstParagraph = firstParagraphMatch[0];
} else if (!firstParagraph && post.body) {
  // Fallback for plain text body to get first paragraph (less ideal if body contains HTML)
  firstParagraph = post.body.split("\n\n")[0];
}
---

<article class="post-preview">
  <h2><a href={`/blog/${post.slug}/`}>{post.data.title}</a></h2>
  <p class="meta">
    <time datetime={post.data.pubDate.toISOString()}>
      {
        new Date(post.data.pubDate).toLocaleDateString("en-US", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })
      }
    </time>
    &bull; by {post.data.author}
  </p>
  <div class="preview-content">
    <Fragment set:html={firstParagraph} />
  </div>
  <a href={`/blog/${post.slug}/`} class="read-more">Read More &rarr;</a>
</article>

<style>
  .post-preview {
    margin-bottom: 3rem; /* Space between previews */
    padding-bottom: 2rem;
    border-bottom: 1px solid #eee; /* Subtle separator */
  }

  .post-preview:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }

  .post-preview h2 {
    font-size: 1.9rem;
    font-weight: 700;
    line-height: 1.3;
    margin-top: 0;
    margin-bottom: 0.35rem;
    color: var(--color-text);
  }

  .post-preview h2 a {
    color: var(--color-text);
    text-decoration: none;
  }
  .post-preview h2 a:hover {
    color: var(--color-accent);
  }

  .meta {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    color: var(--color-meta);
    margin-bottom: 1rem;
  }

  .preview-content p {
    /* If rendering HTML of first paragraph */
    margin-bottom: 1rem;
    font-size: 1rem; /* Slightly smaller for preview */
    line-height: 1.6;
  }
  .preview-content :global(p) {
    /* Targets the p tag rendered by set:html */
    font-size: 1rem; /* Or your base body font size for excerpts */
    line-height: 1.65;
    color: var(--color-text);
    margin-bottom: 1rem; /* Ensure space before "Read More" */
  }
  .preview-content :global(p:last-child) {
    margin-bottom: 1rem; /* Ensure space even if it's the only paragraph */
  }

  .read-more {
    font-family: var(--font-sans);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--color-accent);
    text-decoration: none;
    display: inline-block;
    margin-top: 0.5rem;
  }
  .read-more:hover {
    color: var(--color-text);
  }

  /* --- Mobile Adjustments --- */
  @media (max-width: 768px) {
    /* Common breakpoint for tablets and mobiles */
    .post-preview h2 {
      font-size: 1.6rem; /* Reduce font size for post titles */
      line-height: 1.35; /* Slightly more line-height if titles wrap */
      margin-bottom: 0.3rem;
    }

    .preview-content :global(p) {
      font-size: 0.95rem; /* Slightly smaller excerpt text */
      line-height: 1.6;
    }

    .meta {
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    /* Further adjustments for smaller mobile screens */
    .post-preview h2 {
      font-size: 1.4rem; /* Even smaller font size */
      line-height: 1.4; /* Can increase a bit more for very narrow screens */
    }
    .preview-content :global(p) {
      font-size: 0.9rem;
    }
  }
</style>
