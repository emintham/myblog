---
import { SITE_TITLE } from "../siteConfig.ts";

const navLinks = [
  { href: "/", label: "Home" },
  { href: "/tags", label: "Tags" },
  { href: "/series", label: "Series" },
  { href: "/about", label: "About" },
];
---

<nav>
  <div class="nav-container">
    <div class="blog-title">
      <a href="/">{SITE_TITLE}</a>
    </div>
    <ul class="nav-links">
      {
        navLinks.map((link) => (
          <li>
            <a href={link.href}>{link.label}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style>
  nav {
    padding: 1.5rem 0;
    border-bottom: 1px solid #e0e0e0;
    margin-bottom: 1rem;
  }

  .nav-container {
    max-width: var(--content-max-width, 720px);
    margin: 0 auto;
    padding: 0 1rem; /* Keeps content from touching edges on small screens */
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .blog-title {
    margin-bottom: 1rem;
  }

  .blog-title a {
    font-family: var(--font-display-title);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease-in-out;
    letter-spacing: 0.01em;
    text-transform: uppercase;
  }

  .blog-title a:hover {
    color: var(--color-accent);
  }

  .nav-links {
    /* This is the ul */
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: space-between; /* This is the key change for distribution */
    width: 100%; /* Makes the ul span the full width of .nav-container */
    flex-wrap: wrap; /* Allows links to wrap on very small screens if necessary */
  }

  .nav-links li {
    /* Horizontal margins are no longer needed on li for spacing,
       as justify-content: space-between handles it.
       You might want text-align if link text varies a lot in length. */
    text-align: center; /* Ensures text within each link item is centered if items have different widths */
  }

  .nav-links li a {
    font-family: var(--font-sans);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-meta);
    text-decoration: none;
    padding: 0.5rem 0.1rem; /* Vertical padding, minimal horizontal as space-between handles it */
    /* Increase horizontal padding if you want larger clickable areas for each link */
    display: inline-block; /* Ensures padding is applied correctly */
    transition: color 0.2s ease-in-out;
  }

  .nav-links li a:hover,
  .nav-links li a.is-active {
    color: var(--color-text);
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .blog-title a {
      font-size: 1.5rem;
    }
    .nav-links {
      /* On very small screens, you might prefer them not to be space-between
         if they get too far apart or if wrapping makes space-between look odd.
         Could revert to justify-content: center or space-around. */
      /* justify-content: space-around; /* Example for smaller screens */
    }
    .nav-links li a {
      font-size: 0.85rem; /* Slightly smaller font for links */
      padding: 0.5rem 0.25rem; /* Adjust padding for small screens */
    }
  }
</style>
