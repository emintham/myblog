---
// src/pages/admin/analyze.astro

import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE_TITLE } from "../../siteConfig";
import "../../styles/admin.css";
import "../../styles/content-intelligence.css";

// Import the Content Intelligence Dashboard
import ContentIntelligenceDashboard from "../../components/admin/rag-search/ContentIntelligenceDashboard";
import { ErrorBoundary } from "../../components/admin/shared/ErrorBoundary";

if (import.meta.env.PROD) {
  return new Response(null, { status: 404, statusText: "Not Found" });
}
const pageTitle = `Content Intelligence - ${SITE_TITLE}`;
const pageDescription =
  "Discover connections and synthesis opportunities across your content.";
---

<BaseLayout title={pageTitle} description={pageDescription} isAdminPage={true}>
  <ErrorBoundary componentName="Content Intelligence Dashboard" client:load>
    <ContentIntelligenceDashboard client:load />
  </ErrorBoundary>
</BaseLayout>
