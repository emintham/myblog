---
// src/pages/analyze.astro (or your relevant Astro page)

import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE_TITLE } from "../../siteConfig";
import "../../styles/admin.css";
import "../../styles/analyze.css";

// Import your main React TSX component
import CloseReadingAnalyzer from "../../components/admin/CloseReadingAnalyzer.tsx";

if (import.meta.env.PROD) {
  return new Response(null, { status: 404, statusText: "Not Found" });
}
const pageTitle = `Close Reading Analyzer - ${SITE_TITLE}`;
const pageDescription = "A tool for close reading analysis of text passages.";
---

<BaseLayout title={pageTitle} description={pageDescription} isAdminPage={true}>
  <script
    defer
    src="https://cdnjs.cloudflare.com/ajax/libs/uuid/8.3.2/uuid.min.js"
    xintegrity="sha512-UNM1njAgOFUa74Z0bADwAq8gbTcqZC8Ej4xPSzpnh0l6KMevwvkBvbldF9uR++qKeJ+MOZHRjV1HZjoRvjDfNQ=="
    crossorigin="anonymous"
    referrerpolicy="no-referrer"></script>

  <CloseReadingAnalyzer client:load />
</BaseLayout>
