---
import Navigation from "../components/Navigation.astro";
import "../styles/global.css"; // Or move styles here with <style is:global>
import "../styles/sidenotes.css";
import { SITE_TITLE, SITE_DESCRIPTION, AUTHOR_NAME } from "../siteConfig.ts";

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
const googleFontsURL =
  "https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Montserrat:wght@300..700&family=Spectral:wght@400;700&family=Corinthia:wght@400;700&display=swap";
const TEMPLATE_GITHUB_URL = "https://github.com/emintham/blog-template";
const TEMPLATE_AUTHOR_URL = "https://emintham.com";
const TEMPLATE_AUTHOR_NAME = "Emin Tham + Gemini 2.5 Pro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {/* Preconnect to Google Fonts servers */}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    {/* Load Google Fonts CSS asynchronously */}
    <link
      rel="stylesheet"
      href={googleFontsURL}
      media="print"
      onload="this.media='all'"
    />

    {
      /* Fallback for users with JavaScript disabled (less critical for fonts but good practice) */
    }
    <noscript><link rel="stylesheet" href={googleFontsURL} /></noscript>
  </head>
  <body>
    <Navigation />
    <main class="content-wrapper">
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} {AUTHOR_NAME}</p>
      <p class="attribution">
        <a href={TEMPLATE_GITHUB_URL} target="_blank" rel="noopener noreferrer"
          >Template</a
        > by <a
          href={TEMPLATE_AUTHOR_URL}
          target="_blank"
          rel="noopener noreferrer">{TEMPLATE_AUTHOR_NAME}</a
        >.
      </p>
    </footer>
    <style>
      main {
        min-height: calc(
          100vh - 150px
        ); /* Adjust based on your actual nav/footer height if changed */
        /* Adding some bottom padding to main to ensure content doesn't sit directly on footer */
        padding-bottom: 3rem;
      }

      footer {
        text-align: center;
        padding: 0rem 1rem 3rem; /* Increased bottom padding for more breathing room */
        font-size: 0.85rem;
        color: var(--color-meta);
        font-family: var(--font-sans);
        /* border-top: 1px solid var(--color-border-subtle); */ /* REMOVED BORDER for a cleaner look */
        margin-top: 0; /* Removed margin-top as main has padding-bottom now */
        /* Optionally, if you still want a very subtle separation without a full border: */
        /* box-shadow: 0 -2px 10px -5px rgba(0,0,0,0.03); */ /* Very subtle top shadow */
      }

      footer p {
        margin: 0.5em 0; /* Slightly increased space between lines in the footer */
        line-height: 1.6; /* Improved line height for readability */
      }

      footer a {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.2s ease-in-out;
      }

      footer a:hover {
        text-decoration: underline;
        color: var(--color-text);
      }

      .attribution {
        margin-top: 1em; /* More space above attribution line */
        font-size: 0.8rem; /* Slightly smaller attribution */
      }
    </style>
  </body>
  <script src="/scripts/sidenotes.js" defer></script>
</html>
