---
import Navigation from "../components/Navigation.astro";
import "../styles/global.css"; // Or move styles here with <style is:global>

const {
  title = "Emin's Notes",
  description = "Personal writings and thoughts.",
} = Astro.props;

const googleFontsURL = "https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Montserrat:wght@300;400;700&family=Spectral:wght@400;700&display=swap";
const TEMPLATE_GITHUB_URL = "https://github.com/emintham/blog-template";
const TEMPLATE_AUTHOR_URL = "https://emintham.com";
const TEMPLATE_AUTHOR_NAME = "Emin Tham + Gemini 2.5 Pro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {/* Preconnect to Google Fonts servers */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {/* Load Google Fonts CSS asynchronously */}
    <link rel="stylesheet" href={googleFontsURL} media="print" onload="this.media='all'">

    {/* Fallback for users with JavaScript disabled (less critical for fonts but good practice) */}
    <noscript><link rel="stylesheet" href={googleFontsURL}></noscript>
  </head>
  <body>
    <Navigation />
    <main class="content-wrapper">
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Emin Tham</p>
      <p class="attribution">
        <a href={TEMPLATE_GITHUB_URL} target="_blank" rel="noopener noreferrer"
          >Template</a
        > by <a
          href={TEMPLATE_AUTHOR_URL}
          target="_blank"
          rel="noopener noreferrer">{TEMPLATE_AUTHOR_NAME}</a
        >.
      </p>
    </footer>
    <style>
      main {
        min-height: calc(100vh - 180px); /* Adjust based on nav/footer height */
      }
      footer {
        text-align: center;
        padding: 2.5rem 1rem 2.5rem; /* Increased padding slightly */
        font-size: 0.85rem;
        color: var(--color-meta);
        font-family: var(--font-sans); /* Open Sans for footer text */
        border-top: 1px solid var(--color-border-subtle); /* Adds a nice separator */
        margin-top: 4rem; /* More space above the footer */
      }

      footer p {
        margin: 0.4em 0; /* A little space between lines in the footer */
      }

      footer a {
        color: var(--color-accent); /* Use accent color for links */
        text-decoration: none;
        transition: color 0.2s ease-in-out;
      }

      footer a:hover {
        text-decoration: underline;
        color: var(--color-text); /* Or slightly darken accent */
      }
    </style>
  </body>
  <script src="/scripts/sidenotes.js" defer></script>
</html>
