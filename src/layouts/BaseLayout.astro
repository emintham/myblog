---
import Navigation from "../components/Navigation.astro";
import "../styles/global.css"; // Or move styles here with <style is:global>

const {
  title = "Emin's Notes",
  description = "Personal writings and thoughts.",
} = Astro.props;

const googleFontsURL = "https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&family=Montserrat:wght@300;400;700&family=Spectral:wght@400;700&display=swap";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    {/* Preconnect to Google Fonts servers */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    {/* Load Google Fonts CSS asynchronously */}
    <link rel="stylesheet" href={googleFontsURL} media="print" onload="this.media='all'">

    {/* Fallback for users with JavaScript disabled (less critical for fonts but good practice) */}
    <noscript><link rel="stylesheet" href={googleFontsURL}></noscript>

  </head>
  <body>
    <Navigation />
    <main class="content-wrapper">
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Emin Tham</p>
    </footer>
    <style>
      main {
        min-height: calc(100vh - 150px); /* Adjust based on nav/footer height */
      }
      footer {
        text-align: center;
        padding: 2rem 1rem;
        font-size: 0.85rem;
        color: var(--color-meta);
        font-family: var(--font-sans);
      }
    </style>
  </body>
</html>
